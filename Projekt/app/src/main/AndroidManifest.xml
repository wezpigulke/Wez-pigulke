<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wezpigulke">

    <uses-permission android:name="android.permision.CALL_PHONE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name="com.wezpigulke.go_to.GoToWelcome"
            android:label="Weź pigułkę"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.wezpigulke.SideMenu"
            android:label="Dzisiaj"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddReminder"
            android:label="Dodawanie przypomnienia"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddDoctor"
            android:label="Dodaj lekarza"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddProfile"
            android:label="Dodaj profil"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddVisit"
            android:label="Dodaj wizytę"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddMedicine"
            android:label="Dodaj lek"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddNotes"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddMeasurement"
            android:label="Dodaj pomiar"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.add.AddTypeMeasurement"
            android:label="Dodaj typ badania"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.wezpigulke.notification.RepeatingActivityReminder"
            android:label="Weź tabletkę"/>

        <activity
            android:name="com.wezpigulke.notification.RepeatingActivityVisit"
            android:label="Wizyta u lekarza" />

        <receiver android:name="com.wezpigulke.notification.NotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name="com.wezpigulke.notification.BootCompletedNotificationReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>


        <receiver android:name="com.wezpigulke.notification.ButtonIntent" />

    </application>

</manifest>