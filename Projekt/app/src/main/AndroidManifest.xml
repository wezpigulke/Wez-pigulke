<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wezpigulke">
    <uses-permission android:name="android.permision.CALL_PHONE"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.wezpigulke.StartMenu"
            android:label="Weź pigułkę"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.wezpigulke.MainMenu"
            android:label="Dzisiaj"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddReminder"
            android:label="Dodawanie przypomnienia"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddDoctor"
            android:label="Dodaj lekarza"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddProfile"
            android:label="Dodaj profil"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddVisit"
            android:label="Dodaj wizytę"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddMedicine"
            android:label="Dodaj lek"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddNotes"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddMeasurement"
            android:label="Dodaj pomiar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.wezpigulke.AddTypeMeasurement"
            android:label="Dodaj typ badania"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name="com.wezpigulke.RepeatingActivityReminder"
            android:label="Weź tabletkę"
            android:launchMode="singleTop"/>

        <activity android:name="com.wezpigulke.RepeatingActivityVisit"
            android:label="Wizyta u lekarza"/>

        <receiver android:name="com.wezpigulke.NotificationReceiverReminder"/>

        <receiver android:name="com.wezpigulke.ButtonIntent"/>

    </application>

</manifest>