<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/nameOfDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileMeasurement"
        android:layout_alignLeft="@+id/profileMeasurement"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/imageView9"
        android:text="Imie i nazwisko"
        android:textColor="#00a7f5"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/specializationDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameOfDoctor"
        android:layout_alignLeft="@+id/profileMeasurement"
        android:layout_marginTop="0dp"
        android:text="Specjalizacja"
        android:textColor="#f92a3f"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/addressDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/specializationDoctor"
        android:layout_alignLeft="@+id/dateMeasurement"
        android:text="Adres"
        android:textColor="#000"
        android:textSize="16dp" />

</RelativeLayout>