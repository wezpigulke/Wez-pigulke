<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewv"
        android:layout_width="153dp"
        android:layout_height="57dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toTopOf="@+id/cardView2v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3v"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView5v"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Wizyta u lekarza"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView3v"
        android:layout_width="103dp"
        android:layout_height="97dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2v"
        app:layout_constraintEnd_toStartOf="@+id/cardViewv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505"
        app:srcCompat="@drawable/logo"
        tools:ignore="NotSibling" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2v"
        android:layout_width="321dp"
        android:layout_height="351dp"
        app:layout_constraintBottom_toTopOf="@+id/button3v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3v"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView12v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="Profil: "
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="8dp"
            android:text="Godzina:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView14v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="8dp"
            android:text="Data:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView9v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:text="Lekarz: "
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView12v"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10v" />

        <TextView
            android:id="@+id/textView10v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="280dp"
            android:text="Specjalizacja:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView9v"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button3v"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:text="Nawiguj"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4v"
        app:layout_constraintTop_toBottomOf="@+id/cardView2v" />

    <Button
        android:id="@+id/button4v"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:text="ZadzwoÅ„"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3v"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2v" />

</android.support.constraint.ConstraintLayout>