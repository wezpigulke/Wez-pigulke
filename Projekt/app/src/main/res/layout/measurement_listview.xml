<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profileMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Nazwa profilu"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/dateMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileMeasurement"
        android:layout_below="@+id/typeMeasurement"
        android:text="Godzina + data"
        android:textColor="#00a7f5"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/profileMeasurement" />

    <TextView
        android:id="@+id/resultMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateMeasurement"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:text="Wynik"
        android:textColor="#f92a3f"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp" />

    <TextView
        android:id="@+id/typeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileMeasurement"
        android:layout_below="@+id/profileMeasurement"
        android:text="Typ badania"
        android:textColor="#8FBC8F"
        android:textSize="18dp"
        android:layout_alignLeft="@+id/profileMeasurement" />

</RelativeLayout>