<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileNotes"
        android:layout_below="@+id/profileNotes"
        android:text="Data notatki"
        android:textColor="#f92a3f"
        android:textSize="16dp"
        android:layout_alignLeft="@+id/profileNotes" />

    <TextView
        android:id="@+id/profileNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:text="Profil"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp" />

    <TextView
        android:id="@+id/nameNotes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dateNotes"
        android:layout_alignStart="@+id/dateNotes"
        android:layout_below="@+id/dateNotes"
        android:text="TytuÅ‚"
        android:textColor="#00a7f5"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/notepad" />

</RelativeLayout>