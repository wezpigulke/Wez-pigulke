<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item tools:targetApi="23" name="android:titleTextColor">@android:color/holo_green_light</item>
        <item name="android:textColor">#000000</item>
        <item tools:targetApi="21" name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColorPrimary">#595959</item>
        <item tools:targetApi="21" name="android:colorAccent">#1b5e20</item>
    </style>

</resources>